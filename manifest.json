{
  "manifest_version": 2,

  "name": "tab-manager",
  "description": "The tab manager I've always wanted for chrome",
  "version": "0.0",

  "permissions": [
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": [
      "js/TabRecord.js",
      "js/storage.js",
      "js/tabManager.js",
      "js/background.js"
    ],

    "persistent": false
  },

  "browser_action": {
    "default_popup": "html/popup.html"
  }
}