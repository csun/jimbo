{
  "manifest_version": 2,

  "name": "tab-manager",
  "description": "The tab manager I've always wanted for chrome",
  "version": "0.0",

  "permissions": [
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html"
  }
}